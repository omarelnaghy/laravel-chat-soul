{
    "name": "omarelnaghy/laravel-chat-soul",
    "description": "A comprehensive real-time chat system package for Laravel 11 applications",
    "keywords": ["laravel", "chat", "real-time", "broadcasting", "websockets", "pusher"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Omar Elnaghy",
            "email": "omarelnaghy53@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0 || ^12.0",
        "laravel/sanctum": "^4.0",
        "pusher/pusher-php-server": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "OmarElnaghy\\LaravelChatSoul\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OmarElnaghy\\LaravelChatSoul\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OmarElnaghy\\LaravelChatSoul\\ChatSoulServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}